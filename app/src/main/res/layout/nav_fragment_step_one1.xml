<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#22ff0000"
        android:id="@+id/layout_test"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <View
            android:id="@+id/view_center"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/iv1"
            android:src="@drawable/i_settings_wifi_3"
            android:layout_toLeftOf="@+id/view_center"
            android:layout_above="@+id/view_center"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:id="@+id/iv2"
            android:src="@drawable/i_settings_wifi_2"
            android:layout_toRightOf="@+id/view_center"
            android:layout_above="@+id/view_center"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:id="@+id/iv3"
            android:src="@drawable/level_wifi_state"
            android:layout_toLeftOf="@+id/view_center"
            android:layout_below="@+id/view_center"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:id="@+id/iv4"
            android:src="@drawable/i_settings_wifi_4"
            android:layout_toRightOf="@+id/view_center"
            android:layout_below="@+id/view_center"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_step11"
        android:text="step11111111111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_step11"
        android:text="go step two111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>