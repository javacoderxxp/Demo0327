<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"

                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb1"
                        android:text="你好1"
                        android:background="#4e86ed"
                        android:padding="10dp"
                        android:checked="true"
                        android:textColor="@color/txt_black_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rb2"
                        android:text="你好2"
                        android:background="#ec69d6"
                        android:padding="10dp"
                        android:textColor="@color/txt_black_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </android.support.v7.widget.CardView>
            <View
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_object"
                    android:text="object"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_frame"
                    android:text="frame"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_property"
                    android:text="property"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_anim"
                android:src="@drawable/day_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_anim2"
                android:src="@drawable/day_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="#a6c0ef"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />
            <ImageView
                android:id="@+id/iv_anim3"
                android:scaleType="fitXY"
                android:src="@drawable/animation_list_test"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <SeekBar
                android:id="@+id/sb_move"
                android:max="100"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_bottom"
                    android:src="@mipmap/sjzg"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_top"
                    android:src="@mipmap/pic11"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>