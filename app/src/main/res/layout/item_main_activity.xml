<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_wifi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/selector_wifi_state"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_des"
        android:layout_alignTop="@+id/iv_wifi"
        app:layout_constraintLeft_toRightOf="@+id/iv_wifi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_nothing"
        app:layout_constraintBottom_toTopOf="@+id/tv_cla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/dif_text_title_color"
        android:textSize="15sp"
        android:autoSizeTextType="uniform"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_cla"
        app:layout_constraintLeft_toRightOf="@+id/iv_wifi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_nothing"
        app:layout_constraintTop_toBottomOf="@+id/tv_des"
        android:layout_alignBottom="@+id/iv_wifi"
        android:textSize="13sp"
        android:textColor="?attr/dif_text_summary_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:id="@+id/tv_nothing"
        android:text="22"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#0000ff"
        android:background="@drawable/shape_circle_stroke"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="44dp"
        android:layout_height="44dp" />
</android.support.constraint.ConstraintLayout>